@model List<ABCApplication.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}
@section header{
    Cart
}
@section jsFooter{
    <script src="/Content/js/controller/cartController.js"></script>
}

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <td>ProductID</td>
                <td>Product Name</td>
                <td>Quantity</td>
                <td>Price</td>
                <td>Total</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ID</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price</td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                    <td><a href="#" data-id="@item.Product.ID" class="btn-delete"><i class="glyphicon glyphicon-remove"></i></a></td>
                </tr>
            }
        </tbody>
    </table>

    <button id="btnContinue" class="btn">Continue</button>
    <button id="btnRemoveAll" class="btn">Remove All</button>
    <button id="btnAddOrder" class="btn">Add Order</button>
}
else
{
    <span class="alert alert-info">No item in cart!</span>
}


